export PATH="$EBINS_HOME:$SQLITESTUDIO_HOME:$ANDROID_SDK_PLATFORM_TOOLS_HOME:$ANDROID_SDK_TOOLS_HOME:$ANDROID_STUDIO_HOME:$PIDCAT_HOME:$JAVA_HOME:$SIPP_HOME:$RTPTOOL_HOME:$WEBRTC_DEPOT_HOME:$INTELLIJ_IDEA_HOME:$NINJA_HOME:$GIT_DIFFALL_HOME:$PATH"

