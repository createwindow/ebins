ANDROID_SDK_TOOLS_HOME="$DIR_SOFTWARE/android-sdk-linux/tools"
ANDROID_STUDIO_HOME="$DIR_SOFTWARE/android-studio/bin"
PIDCAT_HOME="$DIR_SOFTWARE/pidcat"
SIPP_HOME="$DIR_SOFTWARE/sipp"
